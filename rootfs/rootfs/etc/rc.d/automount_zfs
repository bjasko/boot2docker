#!/bin/sh
echo "automount zfs ...";

/sbin/modprobe zfs > /tmp/zfs.log  2>&1

for i in 1 2 3 4
do
 echo "/dev/zfs try: $i"

 if [ -e /dev/zfs ] ; then
   break
 else
   sleep 1
 fi
done

mkdir -p /home
mkdir -p /opt
/usr/local/sbin/zpool import green >> /tmp/zfs.log 2>&1

/sbin/swapon  /dev/zvol/green/swap
/sbin/swapon -a

mkdir -p /var/lib/docker
[ -e /dev/zvol/green/docker_vol ] && /bin/mount /dev/zvol/green/docker_vol /var/lib/docker

/usr/local/sbin/zpool status -v >> /tmp/zfs.log 2>&1
/usr/local/sbin/zfs list >> /tmp/zfs.log 2>&1
echo "automount zfs over."
